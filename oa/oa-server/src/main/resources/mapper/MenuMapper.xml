<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zzw.server.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.zzw.server.pojo.Menu">
        <id column="id" property="id"/>
        <result column="url" property="url"/>
        <result column="path" property="path"/>
        <result column="component" property="component"/>
        <result column="name" property="name"/>
        <result column="iconCls" property="iconCls"/>
        <result column="keepAlive" property="keepAlive"/>
        <result column="requireAuth" property="requireAuth"/>
        <result column="parentId" property="parentId"/>
        <result column="enabled" property="enabled"/>
    </resultMap>

    <resultMap id="Menus" type="cn.zzw.server.pojo.Menu" extends="BaseResultMap">
        <collection property="children" ofType="cn.zzw.server.pojo.Menu">
            <id column="id2" property="id"/>
            <result column="url2" property="url"/>
            <result column="path2" property="path"/>
            <result column="component2" property="component"/>
            <result column="name2" property="name"/>
            <result column="iconCls2" property="iconCls"/>
            <result column="keepAlive2" property="keepAlive"/>
            <result column="requireAuth2" property="requireAuth"/>
            <result column="parentId2" property="parentId"/>
            <result column="enabled2" property="enabled"/>
        </collection>
    </resultMap>

    <resultMap id="MenusWithRole" type="cn.zzw.server.pojo.Menu" extends="BaseResultMap">
        <collection property="roles" ofType="cn.zzw.server.pojo.Role">
            <id property="id" column="rid"/>
            <result property="name" column="rname"/>
            <result property="nameZh" column="rnameZh"/>
        </collection>
    </resultMap>

    <resultMap id="MenusWithChildren" type="cn.zzw.server.pojo.Menu">
        <id column="id1" property="id"/>
        <result column="name1" property="name"/>
        <collection property="children" ofType="cn.zzw.server.pojo.Menu">
            <id column="id2" property="id"/>
            <result column="name2" property="name"/>
            <collection property="children" ofType="cn.zzw.server.pojo.Menu">
                <id column="id3" property="id"/>
                <result column="name3" property="name"/>
            </collection>
        </collection>
    </resultMap>

<!--    根据用户ID查询菜单列表-->
    <select id="getMenusByAdminId" resultMap="Menus">
        SELECT DISTINCT
          m1.*,
          m2.`id` AS id2,
          m2.`url` AS url2,
          m2.`path` AS path2,
          m2.`component` AS component2,
          m2.`name` AS name2,
          m2.`iconCls` AS iconCls2,
          m2.`keepAlive` AS keepAlive2,
          m2.`requireAuth` AS requireAuth2,
          m2.`parentId` AS parentId2,
          m2.`enabled` AS enabled2 ,
          m2.`menuLevel` AS menuLevel2
        FROM
          t_menu m1,
          t_menu m2,
          t_admin_role ar,
          t_menu_role mr
        WHERE m1.`id` = m2.`parentId`
          AND m2.`id` = mr.`mid`
          AND mr.`rid` = ar.`rid`
          AND ar.`adminId` = #{id}
          AND m1.`enabled` = TRUE
          AND m1.`component`IS NOT NULL
          AND m2.menuLevel!=3
    </select>

<!--  根据角色获取菜单列表-->
    <select id="getMenusWithRole" resultMap="MenusWithRole">
        SELECT m.*,ar.`name` AS rname,ar.`id` AS rid,ar.`nameZh` AS rnameZh  FROM
`t_role` ar,`t_menu` m,`t_menu_role` mr
WHERE m.`id`=mr.`mid` AND ar.`id`=mr.`rid` ORDER BY m.`id`
    </select>

<!--    查询所有菜单-->
    <select id="getAllMenus" resultMap="MenusWithChildren">
        SELECT m1.`id` AS id1,m1.`name` AS name1,m2.`id` AS id2,m2.`name` AS name2,m3.`id` AS id3,m3.`name` AS name3
        FROM `t_menu` m1,`t_menu` m2,`t_menu` m3
        WHERE m1.`id`=m2.parentId AND m2.`id`=m3.`parentId` AND m3.`enabled`=TRUE
    </select>

    <!--根据角色ID查询该角色所拥有的所有权限-->
    <select id="getMenuIdsByRoleId" resultType="java.lang.String">
       SELECT GROUP_CONCAT(`id` SEPARATOR ",") ids FROM `t_menu` WHERE `id` IN(
          SELECT `mid` FROM `t_menu_role` tr WHERE tr.rid = #{roleId})
    </select>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, url, path, component, name, iconCls, keepAlive, requireAuth, parentId, enabled
    </sql>

</mapper>
